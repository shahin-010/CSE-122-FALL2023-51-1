#include<stdio.h>
int main()
{
    int testcase;
    char word[101]; 
    scanf("%d",&testcase);
    for(int i=0;i<=testcase;i++)
    {
    
   gets(word);
   int size=strlen(word);
   if(size>10)
   {
       printf("%c%d%c\n",word[0],size-2,word[size-1]);
   }
   else
   printf("%s\n",word);

    }
  
    return 0;
}
